nav.pagination{display:flex;justify-content:space-between}footer nav#menu a{text-decoration:none}nav.pagination a svg{height:30px}article.post section.content figure{min-height:300px}@media screen and (max-width:768px){article.post section.content figure{min-height:250px}}@media screen and (max-width:415px){article.post section.content figure{min-height:200px}}footer{background-color:#414142;color:#fcfbfb;grid-gap:0 50px;grid-template-columns:auto 350px 120px;grid-template-rows:auto}@media screen and (max-width:768px){footer{grid-gap:20px 0;grid-template-columns:auto 350px;grid-template-rows:repeat(2,min-content)}}@media screen and (max-width:560px){footer{grid-gap:15px 0;grid-template-columns:repeat(3,auto);grid-template-rows:repeat(3,min-content)}}footer nav#menu,footer nav.social,footer section.copy{grid-row:1/2}@media screen and (max-width:560px){footer nav#menu,footer nav.social,footer section.copy{grid-column:2/3;justify-self:center}}footer section.copy{grid-column:1/2}@media screen and (max-width:768px){footer section.copy{grid-row:2/3}}@media screen and (max-width:560px){footer section.copy{grid-column:2/3;grid-row:3/4}}footer section.copy p{font-size:14px;margin:0}footer nav#menu{grid-column:2/3;grid-template-columns:auto;grid-template-rows:auto}@media screen and (max-width:768px){footer nav#menu{grid-row:2/3}}footer nav#menu div.info{grid-gap:0 10px;grid-template-columns:repeat(3,auto);grid-template-rows:auto}@media screen and (max-width:346px){footer nav#menu div.info{grid-gap:10px 0;grid-template-columns:auto;grid-template-rows:repeat(3,auto);text-align:center}}footer nav#menu div.categories,footer nav#menu nav.social{display:none}footer nav#menu a{color:#fcfbfb;font-size:14px}footer nav.social{grid-column:3/4}@media screen and (max-width:768px){footer nav.social{grid-column:2/3}}@media screen and (max-width:560px){footer nav.social{grid-row:1/2}}footer nav.social a svg{width:15px}