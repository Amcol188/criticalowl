header,header label#hamburger,header nav#menu{display:grid}header label#hamburger{margin:0 auto}header{justify-content:center}header,header label#hamburger{align-items:center}header{grid-template-columns:repeat(3,1fr);grid-template-rows:repeat(2,auto);padding:20px}header label#hamburger{flex-direction:column;grid-template-columns:auto;grid-template-rows:repeat(3,9px);height:auto;justify-content:center;left:20px;position:absolute;top:20px;width:30px;z-index:5}header label#hamburger div{background-color:#3d3d3d;height:3px;margin:3px 0;position:relative;transition:all .15s ease-in-out;width:30px}header input#toggle{display:none}header input#toggle:checked+label#hamburger div.top{margin:20px 0 0 13px;transform:rotate(-45deg)}header input#toggle:checked+label#hamburger div.meat{margin:2px 13px 0 0;transform:rotate(45deg)}header input#toggle:checked+label#hamburger div.bottom{transform:scale(0)}header input#toggle:checked+label#hamburger div{width:20px}header input#toggle:checked~nav#menu{height:186px}header nav#menu{clear:both;grid-column:1/2;grid-row:2/3;grid-row-gap:25px;grid-template-rows:1fr repeat(4,.5fr);height:0;justify-self:start;margin:0;overflow:hidden;padding:0;transition:height .15s ease;width:auto;z-index:120}header a#logo{grid-column:2/3;justify-self:center}header a#logo svg.logo{height:100px;width:auto}header a#logo,header nav.social{grid-row:1/2}header nav.social{grid-column:3/4;justify-self:end;margin-left:auto}